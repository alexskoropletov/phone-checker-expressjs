extends layout

block content
  form.form-horizontal(method='post', action='/users/save')
    div.form-group
      div.col-sm-2
        input.form-control(
        type="text"
        name="username"
        placeholder="Username"
        value=""
        )
      div.col-sm-2
        input.form-control(
        type="password"
        name="password"
        placeholder="Password"
        )
    div.form-group
      div.col-sm-2
        button.btn.btn-default(type="submit") Save